{
  "manifest_version": 3,
  "name": "Instant",
  "version": "1.0.0",
  "icons": {
    "16": "src/assets/icon-clock.png",
    "48": "src/assets/icon-clock.png",
    "128": "src/assets/icon-clock.png"
  },
  "host_permissions": [
    "http://*.salesforce.com/*",
    "https://*.salesforce.com/*"
  ],
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs",
    "scripting",
    "storage"
  ],
  "action": { 
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.salesforce.com/*",
        "https://www.instagram.com/*",
        "https://www.w3schools.com/tags/tryit.asp?filename=tryhtml5_global_contenteditable",
        "https://mail.google.com/*",
        "https://mail.google.com/mail/*",
        "https://gmail.com/*",
        "https://www.notion.so/Links-and-tools-640d8b97e1e14b1c8ddc92c59fdcef22",
        "https://www.flaticon.com/search?word=type&k=1736987457617&log-in=google"],
      "js": [
        "src/content/content.ts",
        "src/content/salesforce.ts",
        "src/content/gmail.ts"
      ], 
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
 
  "web_accessible_resources": [
    {
      "resources": ["src/assets/*.png"],
      "matches": []
    }
  ],
  "options_page": "options.html",
  "devtools_page": "src/devtools.html",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  }
}
